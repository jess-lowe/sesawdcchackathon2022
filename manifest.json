{
  "name": "Screen Bean",
  "description": "Make watching lectures fun again",
  "version": "1.0",
  "manifest_version": 2,

  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "images/icon1.png"
  },

  "permissions": ["storage"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
}
